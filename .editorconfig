# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.html]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 4

[*.scss]
indent_style = space
indent_size = 4

[*.{yaml,yml,toml,json}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4

[Dockerfile]
indent_style = space
indent_size = 4
